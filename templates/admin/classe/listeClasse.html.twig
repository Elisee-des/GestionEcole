{% extends "base.admin.html.twig" %}

{% block title %}
	Liste des classes de l'annee
	{{ annee.nom }}
{% endblock %}

{% block titre %}
	Liste des classes de l'annee
	{{ annee.nom }}
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_classe_creer_classe_dans_liste", {id: annee.id}) }}" title="Ajouter ici une classe" class="btn btn-inverse btn-outline-inverse btn-actions float-right">
		<i class="ti-plus"></i>
	</a>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Classe</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for classe in classes %}
							<tr>
								<td>{{classe.nom}}</td>
								<td>
									<a href="{{ path("admin_classe_editer", {"id": classe.id}) }}" title="Modifier cette classe" class="btn btn-inverse btn-actions btn-outline-inverse">
										<i class="ti-marker-alt"></i>
									</a>
									<a href="{{ path("admin_classe_editer", {"id": annee.id}) }}" title="Voir les classes de cette anneé" class="btn btn-info btn-outline-info">
										<i class="ti-receipt"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<a href="{{ path("admin_classe_annee") }}" class="mr-2 btn btn-inverse btn-outline-inverse float-left">
		Retour a la liste des Anneés
</a>
<br>{% endblock %}{% block javascripts %}{% endblock %}
