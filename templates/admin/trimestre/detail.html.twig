{% extends "base.admin.html.twig" %}

{% block title %}
	Gestion des trimestres de l'annee {{ annee.nom }}
{% endblock %}

{% block titre %}
	Gestion des trimestres de l'annee {{ annee.nom }}
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_trimestre_creer") }}" class="btn btn-inverse btn-outline-inverse btn-actions float-right">Ajouter un trimestre</a>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Trimestres</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for  trimestre in trimestres %}
							<tr>
								<td>{{trimestre}}</td>
								<td>
									<a
										href="{{ path("admin_trimestre_editer", {"id": trimestre.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										{# <i class="mdi mdi-pencil"></i> #}
										Editer
									</a>

									<a
										href="{{ path("admin_trimestre_supprimer", {"id": trimestre.id}) }}" class="btn btn-danger btn-outline-danger" onclick="return confirm('Etes vous sur de vouloir supprimer cet Trimestre ? Cette action est irreversible')">
										{# <i class="mdi mdi-format-list-bulleted-square"></i> #}
										Supprimer
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
