{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Trimestre</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for  trimestre in annees.trimestres %}
							<tr>
								<td>{{trimestre.nom}}</td>
								<td>
									<a
										href="{{ path("admin_trimestre_editer", {"id": trimestre.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										{# <i class="mdi mdi-pencil"></i> #}
										Editer
									</a>

									<a
										href="{{ path("admin_trimestre_detail", {"id": trimestre.id}) }}" class="btn btn-info btn-outline-info">
										{# <i class="mdi mdi-format-list-bulleted-square"></i> #}
										Detail
									</a>

									<a
										href="{{ path("admin_trimestre_editer", {"id": trimestre.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										{# <i class="mdi mdi-pencil"></i> #}
										Trimestre
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

