{% extends "base.admin.html.twig" %}

{% block title %}
	Gestion des matieres
{% endblock %}

{% block titre %}
	Gestion des matieres
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_matiere_creer") }}" class="btn btn-inverse btn-outline-inverse btn-actions float-right">Ajouter un matiere</a>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for matiere in matieres %}
							<tr>
								<td>{{matiere.nom}}</td>
								<td>
									<a
										href="{{ path("admin_matiere_editer", {"id": matiere.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										{# <i class="mdi mdi-pencil"></i> #}
										Editer
									</a>
									<a
										href="{{ path("admin_matiere_detail", {"id": matiere.id}) }}" class="btn btn-info btn-outline-info" >
										{# <i class="mdi mdi-format-list-bulleted-square"></i> #}
										Detail
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
