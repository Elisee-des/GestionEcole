{% extends "base.admin.html.twig" %}

{% block title %}
	Gestion des anneés scolaire
{% endblock %}

{% block titre %}
	Gestion des anneés scolaire
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_annee_scolaire_creer") }}" class="btn btn-inverse btn-actions btn-outline-inverse float-right">Ajouter une année scolaire</a>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Annees</th>
							<th>Description</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for anneescolaire in anneescolaires %}
							<tr>
								<td>{{anneescolaire.annee}}</td>
								<td>
									{{anneescolaire.description}}</td>
								<td>
									<a
										href="{{ path("admin_annee_scolaire_editer", {"id": anneescolaire.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										{# <i class="mdi mdi-pencil"></i> #}
										Editer
									</a>
									<a
										href="{{ path("admin_annee_scolaire_supprimer", {"id": anneescolaire.id}) }}" class="btn btn-danger btn-outline-danger" onclick="return confirm('Etes vous sur de vouloir supprimer cette annee scolaire ? Cette action est irreversible')" >
										{# <i class="mdi mdi-format-list-bulleted-square"></i> #}
										supprimer
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
