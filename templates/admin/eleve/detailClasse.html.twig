{% extends "base.admin.html.twig" %}

{% block title %}
	Les Eleves de la classe de {{ classe.nom }}
{% endblock %}

{% block titre %}
	Les Eleves de la classe de {{ classe.nom }}
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_eleve_creer") }}" class="mr-2 btn btn-inverse btn-outline-inverse btn-actions float-right"><i class="ti-plus"></i></a>
	{# <a href="{{ path("admin_eleve_creer") }}" class="btn btn-inverse btn-outline-inverse btn-actions float-right">Ajouter un eleve</a> #}
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for  eleve in eleves %}
							<tr>
								<td>{{eleve.nom}}</td>
								<td>{{eleve.prenom}}</td>
								<td>
									<a
										href="{{ path("admin_eleve_editer", {"id": eleve.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										<i class="ti-marker-alt"></i>
									</a>

									<a
										href="{{ path("admin_eleve_detail", {"id": eleve.id}) }}" class="btn btn-primary btn-outline-primary">
										<i class="ti-receipt"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
