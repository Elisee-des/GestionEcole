{% extends "base.admin.html.twig" %}

{% block title %}
	Gestion des anneés scolaire
{% endblock %}

{% block titre %}
	Gestion des anneés scolaire
{% endblock %}
{% block boutons %}
	<a href="{{ path("admin_annee_creer") }}" class="btn btn-inverse btn-actions btn-outline-inverse float-right">Ajouter une année scolaire</a>
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<div class="content">
				<table id="example" class="table table-striped nowrap" style="width:100%">
					<thead>
						<tr>
							<th>Annees</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for annee in annees %}
							<tr>
								<td>{{annee.nom}}</td>
								<td>
									<a
										href="{{ path("admin_annee_editer", {"id": annee.id}) }}" class="btn btn-inverse btn-actions btn-outline-inverse">
										{# <i class="mdi mdi-pencil"></i> #}
										Editer
									</a>


									<a
										href="{{ path("admin_annee_supprimer", {"id": annee.id}) }}" class="btn btn-danger btn-outline-danger"  onclick="return confirm('Etes vous sur de vouloir supprimer cet anneé ? les Trimesre de cet anneé seront supprimer avec cette action. Cette action est irreversible')">
										{# <i class="mdi mdi-format-list-bulleted-square"></i> #}
										Supprimer
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{% endblock %}
